<div id="recipe-container">
<br>
<h2><%= @user.username %></h2><br>
<h3>About me: <br><%= @user.bio %></h3><br>
<h3>Favorite Drink: <br><%= @user.favorite_drink %></h3>
    </div>
    <div id="test">
<h4 id="rec-con-title2" ><%= @user.username %>'s libration creations:</h4>
    <ul class="mainconcoctions">
        <% @user.recipes.each do |recipe| %>
            <li><%= link_to recipe.name, recipe_path(recipe), :id=>"recipe-container-small-card"  %></li>
        <% end %>
    </ul>
    </div>
    <div class="button-area">
    <% if @current_user === @user %>
        <%= link_to "Edit Info", edit_user_path(@user), :class=> 'btn btn-secondary' %>
        <%= button_to "Delete", @user, method: :delete, :class=> 'btn btn-secondary' %>
    <% end %>
</div>

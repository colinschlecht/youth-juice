<h2><%= @user.username %></h2>
<h2>Bio: <%= @user.bio %></h2>
<h2>Favorite Drink: <%= @user.favorite_drink %></h2>
<h3><%= @user.username %>'s libration creations:</h3>
<ul>
    <% @user.recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe_path(recipe) %></li>
    <% end %>
</ul>
<div class="button-area">
<% if @current_user === @user %>
    <%= link_to "Edit Info", edit_user_path(@user), :class=> 'btn btn-secondary' %>
    <%= button_to "Delete", @user, method: :delete, :class=> 'btn btn-secondary' %>
<% end %>
</div>

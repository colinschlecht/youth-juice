<h2><%= @user.username %></h2>
<h2><%= @user.bio %></h2>
<h2><%= @user.favorite_drink %></h2>
<ul>
    <% @user.recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe_path(recipe) %></li>
    <% end %>
</ul>

<%= link_to "Edit Info", edit_user_path(@user) %>
<%= button_to "Delete", @user, method: :delete %>

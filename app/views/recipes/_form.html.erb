    <% if @recipe.errors.any? %>
        <ul>
            <% @recipe.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>


<div class="form">

<%= form_with(model: recipe, local: true) do |form| %>

    <%= form.label :name %>
    <%= form.text_field :name %>

<div id="ingredients">

    <h3>ingredients</h3>

    <%= form.fields_for :ingredients, recipe.ingredients do |t| %>
    <%= t.label :name %>
    <%= t.text_field :name, list: "ingredients_autocomplete" %>
        <datalist id="ingredients_autocomplete">
        <% @ingredients.each do |ingredient| %>
        <option value="<%= ingredient.name %>">
        <% end %>
        </datalist>
    <br>
    <%= t.label :ingredient_type %>
    <%= t.select :ingredient_type, @ingredient_type %>
    <br>
    <%= t.label :description %>
    <%= t.text_area :description %>
    <br>
    <% end %>
</div>

<%= form.submit %>
<% end %>
</div>
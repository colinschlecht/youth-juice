<% if recipe.errors.any? %>
    <div class="alert alert-dark" role="alert">
        <ul>
            <% recipe.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>


<div id="recipe-container">

</div>
<%= form_with(model: recipe, local: true) do |form| %>

<div class="drink-description">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <br>
    <%= form.label :drink_description %>
    <br>
    <%= form.text_area :description %>
</div> <br>

<div class="ingredients">
    

<h5>Add Ingredient</h5>

    <%= form.collection_check_boxes :ingredient_ids, @ingredients, :id, :name %>
   
    <%= form.fields_for :ingredients, recipe.ingredients do |tt|%>

 <h5>Unlisted Ingredient</h5>
 
        <%= tt.label :name %>
        <%= tt.text_field :name %>
        <br>
        <%= tt.label :ingredient_type %>
        <%= tt.select :ingredient_type, @ingredient_type %>
        <br>
        <%= tt.label :description %>
        <%= tt.text_area :description %>
    <br>
    <% end %>
</div>

    <%= form.submit :class=> 'btn btn-secondary' %>
<% end %>
</div>
</div>
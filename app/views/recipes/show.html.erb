
<h1><%=@recipe.name %></h1>
<div class="description">
<h1><%=@recipe.description %><h1>
</div>
<ul>
<% @recipe.ingredients.each do |i|%>
    <li><%= i.name  %></li>
    <div class="description">
    <li><%= i.description %></li>
    </div>
<% end %>
</ul>


<%= link_to "Edit Info", edit_recipe_path(@recipe), :class=> 'btn btn-secondary' %>
<%= button_to "Delete", @recipe, method: :delete, :class=> 'btn btn-secondary' %>


